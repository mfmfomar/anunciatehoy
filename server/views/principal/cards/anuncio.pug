      h4.card-title.palabraLarga(style="max-width: 380px;") {{ item.titulo }} 
      p.card-text.break-word {{ item.descripcion }}
      ul.list-group.list-group-flush
        li.list-group-item
          span.badge.badge-pill.bg-info.float-right
