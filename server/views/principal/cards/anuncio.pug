  .card-content.cara.col-xl-12.col-md-12.col-sm-12
    img.anuncio.card-img-top.img-fluid(v-bind:src="'/publico/assets/img/anuncios/'+item._id+'/'+item.imgPortada" alt='Card image cap')
    .card-body
      h5.card-title.palabraLarga(style="max-width: 380px;") {{ item.titulo }} 
      hr.my-1
      .d-flex.justify-content-between.mt-2
        .float-left
          p.font-medium-2.mb-0 ${{ item.precio }} 
        .float-right
          p.font-medium-2.mb-0 {{ item.fecha }}
